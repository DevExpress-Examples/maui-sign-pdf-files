<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SignPdfExample.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="15"
            VerticalOptions="Center">

                <Image x:Name="imageControl"
                    Source="logo.svg"
                    HeightRequest="500"
                    HorizontalOptions="Center" Aspect="AspectFit" />  
            
            <Label
                Text="Sign PDF Files"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Label x:Name="labelDescription"
                Text="Use PDF Document API to sign a PDF File"
                FontSize="18"
                HorizontalOptions="Center" />

            <Button
                x:Name="CounterBtn"
                Text="Sign a File"
                SemanticProperties.Hint="Signs a PDF file"
                Clicked="OnOpenWebButtonClicked"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
